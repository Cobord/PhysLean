@[fun_prop]
lemma integrable_energy_nsmul (n : ‚Ñï) (T : Temperature)
    [IsFiniteMeasure (ùìí.ŒºBolt T)]
    (h : Integrable ùìí.energy (ùìí.ŒºProd T)) :
    Integrable (nsmul n ùìí).energy ((nsmul n ùìí).ŒºProd T) := by
  induction n with
  | zero =>
    simp [nsmul, ŒºProd_nsmul]
  | succ n ih =>
