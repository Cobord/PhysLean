    ((v.hom _)) = _
  erw [‚Üê (Discrete.pairIsoSep S.FDiscrete).hom.comm g]
  change ((v.hom ‚â´ (S.FDiscrete.obj { as := c1 } ‚äó S.FDiscrete.obj { as := c2 }).œÅ g) ‚â´
    (Discrete.pairIsoSep S.FDiscrete).hom.hom) _ =_
  erw [‚Üê v.comm g]
  simp

