def isFullInvolutionEquiv {œÜs : List ùìï} :
    {c : Contractions œÜs // IsFull c} ‚âÉ {f : Fin œÜs.length ‚Üí Fin œÜs.length // Function.Involutive f ‚àß (‚àÄ i, f i ‚â† i)} where
  toFun c := ‚ü®equivInvolutions c.1, by
    apply And.intro (equivInvolutions c.1).2
    rw [‚Üê isFull_iff_involution_no_fixed_points]
    exact c.2
    ‚ü©
  invFun f := ‚ü®equivInvolutions.symm ‚ü®f.1, f.2.1‚ü©, by
    rw [isFull_iff_involution_no_fixed_points]
    simpa using f.2.2‚ü©
  left_inv c := by simp
  right_inv f := by simp


